<section class="coupons coupons--edit">
	<h1>Edit Coupon</h1>
	<form method="post" action="/coupons/edit" method="post"  enctype="multipart/form-data">

		<label for="coupon_title">
			Title
			<input type="text" name="coupon_title" id="coupon_title" value="<%= @coupon.title %>">	
		</label>
		
		<label for="coupon_description">
			Description
			<textarea name="coupon_description" id="coupon_description"><%= @coupon.description %></textarea>	
		</label>
		
		<label for="coupon_discount">
			Discount Amount
			<input type="number" name="coupon_discount" id="coupon_discount" value="<%= @coupon.discount %>">
		</label>
		
		<label for="coupon_expiration_date">
			Expiration Date
			<input type="text" name="coupon_expiration_date" id="coupon_expiration_date" value="<%= @coupon.expiration_date %>">	
		</label>
		
		<label for="coupon_vendor">
			Vendor
			<input type="text" name="coupon_vendor" id="coupon_vendor" value="<%= @coupon.vendor %>">
		</label>
		
		<label for="coupon_image">
			Image 
			<img src="<%= @coupon.img_url %>"><br>
			Update Image:
			<input type="file" name="coupon_image" id="coupon_image">
		</label>
		
		<input type="hidden" name="coupon_id" id="coupon_id" value="<%= @coupon.id %>">
		<input type="hidden" name="coupon_img_url" id="coupon_img_url" value="<%= @coupon.img_url %>">

		<input class="button--primary" type="submit" value="Edit Coupon">
		
	</form>	
	<p><a href="/coupons">Back to coupons</a></p>
</section>